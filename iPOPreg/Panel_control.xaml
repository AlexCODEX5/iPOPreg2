<Window x:Class="iPOPreg.Panel_control"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iPOPreg"
        mc:Ignorable="d"
        Title="Panel de control" Height="590" Width="1150" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}">
    <Border Background="#FF1476C9" CornerRadius="15" MouseLeftButtonDown="Panel_PControl_MouseLeftButtonDown">
        <Grid x:Name="Panel_PControl" Loaded="Panel_PControl_Loaded">
            <Button x:Name="Logout_Panel" Content="" HorizontalAlignment="Left" Height="51" Margin="0,98,0,0" VerticalAlignment="Top" Width="53" BorderBrush="#FF6EDACB" ToolTip="Cerrar Sesion" Click="Logout_Panel_Click">
                <Button.Background>
                    <ImageBrush ImageSource="systemlogout_103399.ico"/>
                </Button.Background>
            </Button>
            <Button x:Name="AddUser_Panel" Content="" HorizontalAlignment="Left" Height="51" Margin="0,149,0,0" VerticalAlignment="Top" Width="53" BorderBrush="#FF6EDACB" ToolTip="Agregar Nuevo Usuario">
                <Button.Background>
                    <ImageBrush ImageSource="Accept-User.ico"/>
                </Button.Background>
            </Button>
            <Button x:Name="RegistroEq_Panel" Content="Registro de &#xD;&#xA;Equipos" HorizontalAlignment="Left" Height="48" Margin="794,31,0,0" VerticalAlignment="Top" Width="116" FontFamily="Nirmala UI" FontSize="16" BorderBrush="#FF6092C5" Background="#FF8FD7EC" Click="RegistroEq_Panel_Click"/>
            <Label x:Name="Titulo_Panel" Content="PANEL DE CONSULTAS" HorizontalAlignment="Left" Height="42" Margin="50,26,0,0" VerticalAlignment="Top" Width="553" FontSize="22" Foreground="White" FontFamily="Microsoft YaHei UI"/>
            <Button x:Name="Prestado_Panel" Content="Equipos &#xD;&#xA;Prestados" HorizontalAlignment="Left" Height="48" Margin="576,32,0,0" VerticalAlignment="Top" Width="108" FontFamily="Tahoma" FontSize="16" BorderBrush="#FF6092C5" Background="#FFCAE3EA" Click="Prestado_Panel_Click"/>
            <Button x:Name="Entrada_Panel" Content="Entrada de &#xD;&#xA;Equipos" HorizontalAlignment="Left" Height="48" Margin="360,31,0,0" VerticalAlignment="Top" Width="108" FontFamily="Tahoma" FontSize="16" BorderBrush="#FF6092C5" Background="#FFCAE3EA" Click="Entrada_Panel_Click"/>
            <Button x:Name="Salida_Panel" Content="Salida de &#xD;&#xA;Equipos" HorizontalAlignment="Left" Height="48" Margin="468,32,0,0" VerticalAlignment="Top" Width="108" FontFamily="Tahoma" FontSize="16" BorderBrush="#FF6092C5" Background="#FFCAE3EA" Click="Salida_Panel_Click"/>
            <DataGrid x:Name="Visualizador_Panel" HorizontalAlignment="Left" Height="467" Margin="75,85,0,0" VerticalAlignment="Top" Width="1027" RowHeight="40"/>
            <Label Content="" Width="53" Background="White" Margin="0,200,0,0" HorizontalAlignment="Left" Height="52" VerticalAlignment="Top"/>
            <Button x:Name="InsertarQR_Panel" HorizontalAlignment="Left" Height="53" Margin="0,199,0,0" VerticalAlignment="Top" Width="53" BorderBrush="#FF6EDACB" ToolTip="Registrar Codigo QR" Click="InsertarQR_Panel_Click">

                <Button.Background>
                    <ImageBrush ImageSource="kissclipart-scan-qr-code-icon-clipart-qr-code-computer-icons-b-b6538eff45964836.png"/>
                </Button.Background>

            </Button>
            <Button x:Name="BajaItem_Panel" Content="Baja de&#xD;&#xA;Equipos" HorizontalAlignment="Left" Height="48" Margin="910,31,0,0" VerticalAlignment="Top" Width="116" FontFamily="Nirmala UI" FontSize="16" BorderBrush="#FF6092C5" Background="#FFFF82B5" Click="BajaItem_Panel_Click"/>
            <Button x:Name="Baja_Panel" Content="Equipos &#xA;de Baja" HorizontalAlignment="Left" Height="48" Margin="684,32,0,0" VerticalAlignment="Top" Width="108" FontFamily="Tahoma" FontSize="16" BorderBrush="#FF6092C5" Background="#FFCAE3EA" Click="Baja_Panel_Click"/>
        </Grid>
    </Border>

</Window>
